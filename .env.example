# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/mlola_email

# Alibaba Cloud Direct Mail Configuration (SMTP)
SMTP_HOST=smtpdm-ap-southeast-1.aliyun.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_smtp_username@yourdomain.com
SMTP_PASS=your_smtp_password
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=Your Company Name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Redis Configuration (for queues and caching)
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# Email Tracking
TRACKING_DOMAIN=yourdomain.com

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100